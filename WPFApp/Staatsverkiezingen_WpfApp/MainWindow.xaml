<Window x:Class="Staatsverkiezingen_WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Staatsverkiezingen_WpfApp"
        mc:Ignorable="d"
        Title="Inloggen" Height="330" Width="300" FontSize="20" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Margin="10" Text="Username:"/>
            <TextBox Margin="10" Name="tbName"/>
            <TextBlock Margin="10" Text="Wachtwoord:"/>
            <PasswordBox Margin="10" Name="pbWachtwoord" PasswordChar="⊙"/>
            <Button Margin="10" Height="35" Name="submit" Content="Inloggen" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
